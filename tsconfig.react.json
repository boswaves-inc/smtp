{
    "extends": "./tsconfig.json",
    "include": [
        ".react-router/types/**/*",
        "api/**/*",
        "app/**/*",
        "app/**/.server/**/*",
        "app/**/.client/**/*",
        "server/**/*",
        "schema/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "target": "ES2022",
        "module": "ES2022",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": [
            "vite/client"
        ],
        "rootDirs": [
            ".",
            "./.react-router/types"
        ],
        "paths": {
            "~/app*": [
                "./app/*"
            ],
            "~/server/*": [
                "./server/*"
            ],
            "~/schema/*": [
                "./schema/*"
            ],
        },
    }
}