{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDirs": [
      "src",
      "schema",
      "emails",
      "emails/_components"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/schema/*": [
        "./schema/*"
      ],
      "~/emails/*": [
        "./emails/*"
      ],
    }
  },
  "include": [
    "schema/**/*",
    "emails/**/*",
    "src/**/*"
  ],
}